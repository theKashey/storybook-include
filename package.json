{
  "name": "storybook-include",
  "displayName": "Storybook include",
  "version": "1.0.0",
  "description": "Folder based storybook configuration",
  "main": "dist/es5/index.js",
  "module": "dist/es2015/index.js",
  "module:es2019": "dist/es2019/index.js",
  "types": "dist/es5/index.d.ts",
  "scripts": {
    "test": "jest",
    "dev": "lib-builder dev",
    "test:ci": "jest --runInBand --coverage",
    "build": "lib-builder build && yarn size:report",
    "release": "yarn build && yarn test",
    "size": "npx size-limit",
    "size:report": "npx size-limit --json > .size.json",
    "lint": "lib-builder lint",
    "format": "lib-builder format",
    "update": "lib-builder update",
    "prepublish": "yarn build && yarn changelog",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:rewrite": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "author": "theKashey <thekashey@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^2.1.6",
    "@storybook/core": "^6.1.21",
    "@theuiteam/lib-builder": "^0.1.2"
  },
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "@types/react": "^16.9.0 || ^17.0.0",
    "react": "^16.9.0 || ^17.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "files": [
    "dist",
    "preset"
  ],
  "keywords": [
    "addon",
    "storybook",
    "storybook-addons",
    "organize"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theKashey/storybook-include.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
